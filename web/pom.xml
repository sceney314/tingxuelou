<!--                        <directory>src/main/resources</directory>-->
<!--                        <includes>-->
<!--                            <include>dubbo-provider.xml</include>-->
<!--                        </includes>-->
<!--                    </resource>-->
<!--                </resources>-->
<!--            </build>-->
<!--        </profile>-->

        <!--mq 消费者-->
        <profile>
            <id>mq</id>
            <build>
                <resources>
                    <resource>
                        <directory>../profiles/mq</directory>
                        <includes>
                            <include>rocketmq.xml</include>
                        </includes>
                    </resource>
                </resources>
            </build>
        </profile>

        <!--job 相关-->
        <profile>
            <id>task</id>
            <build>
                <resources>
                    <resource>
                        <directory>../profiles/task</directory>
                        <includes>
                            <include>job.xml</include>
                        </includes>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>

</project>
